{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "paths": {
      "components/*": ["components/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "contexts/*": ["contexts/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": ["src"]
}
