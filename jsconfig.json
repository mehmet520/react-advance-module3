{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "paths": {
      "assets/*": ["assets/*"],
      "chakra/*": ["chakra/*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "contexts/*": ["contexts/*"],
      "features/*": ["features/*"],
      "hooks/*": ["hooks/*"],
      "layouts/*": ["layouts/*"],
      "pages/*": ["pages/*"],
      "services/*": ["services/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
